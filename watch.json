{
  "install": {
    "include": [
      "^package\\.json$",
      "^\\.env$"
    ]
  },
  "restart": {
    "exclude": [
      "^data/",
      "^definitions/",
      "^log/",
      "^node_modules/",
      ".*dist.*/"
    ],
    "include": [
      "\\.ts$",
      "\\.js$",
      "\\.json$"
    ]
  },
  "throttle": 2000
}
